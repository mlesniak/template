<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="1.0">
    <persistence-unit name="database" transaction-type="RESOURCE_LOCAL">
        <class>com.mlesniak.template.model.Message</class>
        <class>com.mlesniak.template.config.ConfigDO</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost/template"/>
            <property name="javax.persistence.jdbc.user" value="template"/>
            <property name="javax.persistence.jdbc.password" value="template"/>
            <!-- EclipseLink should create the database schema automatically -->
            <property name="eclipselink.ddl-generation.output-mode"
                      value="database"/>
        </properties>
    </persistence-unit>
</persistence>